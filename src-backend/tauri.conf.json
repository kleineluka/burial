{
  "build": {
    "devPath": "../src-frontend",
    "distDir": "../src-frontend",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "burial",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true
      },
      "fs": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Burial",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "burial",
      "resources": [
        "bundled/*"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
